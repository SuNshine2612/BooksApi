@*
    Tham khảo summernote
    https://xuanthulab.net/asp-net-core-mvc-xay-dung-ung-dung-mau-tich-hop-html-editor-summernote-phan-2.html
    Add eFinder vào summernote
    https://xuanthulab.net/asp-net-core-mvc-tich-hop-trinh-quan-ly-file-vao-website.html
*@

@model object
@{
    // Chuyển sang kiểu dynamic
    dynamic model = Model.ToDynamic();
    int height = model.height ?? 200;
    string selector = model.selector;
}

<style>
    #elfauto1{
        z-index:9999999 !important;
    }
</style>
<!-- plugin elfinder -->
<link rel="stylesheet" href="~/lib/jqueryui/themes/base/theme.css" />
<link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="~/lib/elfinder/css/elfinder.full.css" />
<link rel="stylesheet" href="~/lib/elfinder/css/theme.min.css" />
<link rel="stylesheet" href="~/css/elfinder-material-theme/Material/css/theme-gray.css" />


<script src="~/lib/jqueryui/jquery-ui.min.js"></script>
<script src="~/lib/elfinder/js/elfinder.min.js"></script>
<!-- plugin elfinder -->


<script src="@Url.Content("~/lib/summernote/summernote-bs4.js")"></script>
<link href="@Url.Content("~/lib/summernote/summernote-bs4.min.css")" rel="stylesheet">

<script src="~/lib/summernote/plugin/elfinder/summernote-ext-elfinder.js"></script>

<script>
    $(document).ready(function() {
        $('@selector').summernote({
            height: @height,
            toolbar: [
                // [groupName, [list of button]]
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['font', ['strikethrough', 'superscript', 'subscript']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video', 'elfinder']],
                ['view', ['fullscreen', 'codeview']],
                ['height', ['height']]
            ]
        });
    });
</script>