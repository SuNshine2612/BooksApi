@{
    //var token = Context.User.Claims.Where(c => c.Type == "SuSu").FirstOrDefault()
    var codeUser = Context.User.Claims.Where(c => c.Type == BooksApi.Services.StaticVar.ClaimCode).FirstOrDefault()?.Value;
}
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="" class="brand-link">
        <img src="~/admin/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a data-name="@Context.User.Identity.Name" id="userNameLeft" onclick="showModalDialog('@Url.Action("ChangePass","UserTest", new {id = codeUser}, Context.Request.Scheme)','Đổi Mật Khẩu')" class="d-block">@Context.User.Identity.Name</a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        @*https://tuhocict.com/view-component-trong-asp-net-core/
        https://www.c-sharpcorner.com/article/viewcomponent-in-asp-net-core/
        https://www.yogihosting.com/aspnet-core-views/#view-components
        Sử dụng ViewComponent !
        *@
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column nav-legacy nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                @await Component.InvokeAsync("MenuLeft")
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>