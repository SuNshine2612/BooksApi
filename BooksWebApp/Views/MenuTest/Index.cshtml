@model ListWithStatusViewModel<BooksApi.Models.Test.MenuTest>
@{
    ViewData["Title"] = "Quản Lý Menu";
}

<!-- MyCss -->
@section myCss{
    <!-- Select2 -->
    <link rel="stylesheet" href="~/admin/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
}

<!-- MyScripts -->
@section myScripts{
    <!-- Select2 -->
    <script src="~/admin/plugins/select2/js/select2.full.min.js"></script>
    <!-- Scripts use to Menu View -->
    <script src="~/js/test/test_menu.js"></script>
}

<!-- Validation Scripts -->
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Begin card -->
                <div class="card card-primary card-outline">
                    <!-- Card header -->
                    <div class="card-header">

                        <a onclick="showModalDialog('@Url.Action("AddOrEdit", "MenuTest", null, Context.Request.Scheme)', '@BooksApi.Services.StaticVar.ActionCreateNew')" title="@BooksApi.Services.StaticVar.ActionCreateNew" class="btn btn-primary btn-flat btn-sm text-white"><i class="fa fa-edit"></i> @BooksApi.Services.StaticVar.ActionCreateNew </a>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- Card body-->
                    <div class="card-body" id="view-all">

                        @await Html.PartialAsync("_ViewAll", Model)

                    </div>
                </div>
                <!-- End card -->
            </div>
        </div>
    </div>
</div>
