@model BooksApi.Models.Book.Authenticate
@{ Layout = "_LayoutLogin"; }

<form asp-action="Login">
    <div class="hand"></div>
    <div class="hand rgt"></div>
    <h1>Book Login</h1>
    <div class="form-group">
        <input asp-for="Code" class="form-control" required="required" />
        <label class="form-label" asp-for="Code"></label>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control" required="required" />
        <label class="form-label" asp-for="Password"></label>
        @if (TempData["AlertMessage"] != null)
        {
            <p class="alert">@Html.Raw(TempData["AlertMessage"])</p>
        }
        <button class="btn" id="btnLogin" type="submit">Đăng Nhập</button>
    </div>
</form>

@if (TempData["AlertMessage"] != null)
{
    <script>
        $(document).ready(function () {
            $("form").addClass("wrong-entry");
            setTimeout(function () {
                $("form").removeClass("wrong-entry");
            }, 3500);
        });
    </script>
}