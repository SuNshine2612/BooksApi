@{
    ViewData["Title"] = "SignalR Demo";
}
@section myCss{
    <style>
        #sketchpad {
            width: 100%;
            height: 215px;
            border: 2px solid #888;
            border-radius: 4px;
            position: relative; /* Necessary for correct mouse co-ords in Firefox */
        }
    </style>
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <!-- DIRECT CHAT PRIMARY -->
                <div class="card card-prirary cardutline direct-chat direct-chat-primary">
                    <div class="card-header">
                        <h3 class="card-title">SignalR Chat</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <!-- Conversations are loaded here -->
                        <div class="direct-chat-messages">
                            <div class="direct-chat-msg">
                                <dl id="messagesList">
                                </dl>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <form action="#" method="post">
                            <div class="input-group">
                                <input type="text" name="messageInput" id="messageInput" placeholder="Type Message ..." class="form-control" autocomplete="off">
                                <span class="input-group-append">
                                    <button type="button" id="sendButton" class="btn btn-primary">Send</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-cyan cardutline direct-chat direct-chat-danger">
                    <div class="card-header">
                        <h3 class="card-title">SignalR Draw</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="direct-chat-messages">
                            <div class="direct-chat-msg">
                                <canvas id="sketchpad" width="600" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" id="clear_button" onclick="tellServerToClear()" class="btn btn-flat btn-info">Clear Canvas</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/signal/draw.js"></script>
@*<script src="~/js/signal/chat.js"></script>*@