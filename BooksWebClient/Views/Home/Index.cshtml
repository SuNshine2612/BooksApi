@{
    ViewData["Title"] = "Home Page";
    int i = 0;
}

<!-- Banner Slide -->
<div class="container">
    <div class="row">
        <div class="col-md-3 col-md-4 col-sm-3 hidden-xs"><div class="side-banner"><img src="images/side-banner.jpg" alt="banner"></div></div>
        <div class="col-md-9 col-sm-9 col-xs-12 home-slider">
            <div id="magik-slideshow" class="magik-slideshow slider-block">
                <div id='rev_slider_4_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                    <div id='rev_slider_4' class='rev_slider fullwidthabanner'>
                        <ul>
                            @foreach (Slide item in ViewBag.Slides)
                            {
                                <li data-transition='random' data-slotamount='7' data-masterspeed='1000' data-thumb='http://localhost:51778/files/slide/@item.UrlImage'>
                                    <img src='http://localhost:51778/files/slide/@item.UrlImage' alt="@item.MainTitle" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' />
                                    <div class="info">
                                        <div class='tp-caption ExtraLargeTitle sft  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1100' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:2;max-width:none;max-height:none;white-space:nowrap;'><span>@item.MainTitle</span> </div>
                                        <div class='tp-caption LargeTitle sfl  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1300' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:3;max-width:none;max-height:none;white-space:nowrap;'><span>@item.SubTitle</span> </div>
                                        <div class='tp-caption Title sft  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1450' data-easing='Power2.easeInOut' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:none;max-height:none;white-space:nowrap;'>@item.Description</div>
                                        <div class='tp-caption sfb  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1500' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:none;max-height:none;white-space:nowrap;'><a href='@item.UrlLink' class="buy-btn">Xem</a> </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main-container col2-left-layout">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-8 col-xs-12 col-sm-push-4 col-md-push-3">

                <div class="content-page">
                    <!-- featured category -->
                    <div class="category-product">

                        <div class="product-bestseller">
                            <div class="product-bestseller-content">
                                <div class="product-bestseller-list">
                                    <div class="tab-container">
                                        <!-- tab product -->
                                        <div class="tab-panel active" id="tab-1">
                                            <div class="category-products">
                                                <ul class="products-grid">
                                                    @if (ViewBag.Books is not null)
                                                    {
                                                        foreach (Book item in ViewBag.Books)
                                                        {
                                                            <li class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
                                                                <div class="item-inner">
                                                                    <div class="item-img">
                                                                        <div class="item-img-info">
                                                                            <a class="product-image" title="Retis lapen casen" href="/book/detail/@item.Code"> 
                                                                                <img alt="@item.Name" src="http://localhost:51778/files/@item.UrlImage" style="max-height: 298px"> 
                                                                            </a>
                                                                            @*<div class="box-hover">
                                                                                <ul class="add-to-links">
                                                                                    <li><a class="link-quickview" href="quick_view.html"></a></li>
                                                                                    <li><a class="link-wishlist" href="wishlist.html"></a></li>
                                                                                    <li><a class="link-compare" href="compare.html"></a></li>
                                                                                </ul>
                                                                            </div>*@
                                                                        </div>
                                                                    </div>
                                                                    <div class="item-info">
                                                                        <div class="info-inner">
                                                                            <div class="item-title"> 
                                                                                <a title="@item.Name" href="/book/detail/@item.Code"> @item.Name</a>
                                                                            </div>
                                                                            <div class="item-content">
                                                                                <div class="rating">
                                                                                    <div class="ratings">
                                                                                        <div class="rating-box">
                                                                                            <div class="rating width80"></div>
                                                                                        </div>
                                                                                        <p class="rating-links"> <a href="#">1 Review(s)</a> <span class="separator">|</span> <a href="#">Add Review</a> </p>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="item-price">
                                                                                    <div class="price-box"> <span class="regular-price"> <span class="price">$@item.Price</span> </span> </div>
                                                                                </div>
                                                                                @*<div class="action">
                                                                                    <button class="button btn-cart" type="button" title="" data-original-title="Add to Cart"><span>Add to Cart</span> </button>
                                                                                </div>*@
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            
            <aside class="col-left sidebar col-md-3 col-sm-4 col-xs-12 col-sm-pull-8 col-md-pull-9">
                <!-- Sub Slides -->
                <div class="custom-slider-wrap">
                    <div class="custom-slider-inner">
                        <div class="home-custom-slider">
                            <div>
                                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        @foreach (Slide item in ViewBag.SubSlides)
                                        {
                                            <div class="item @(i == 0 ? "active" : "")">
                                                <img src="http://localhost:51778/files/slide/@item.UrlImage" alt="@item.MainTitle">
                                                <div class="carousel-caption">
                                                    <span>@item.MainTitle</span>
                                                    <p>@item.Description</p>
                                                </div>
                                            </div>
                                            i++;
                                        }
                                    </div>
                                    <a class="left carousel-control" href="#" data-slide="prev"> <span class="sr-only">Previous</span> </a>
                                    <a class="right carousel-control" href="#" data-slide="next"> <span class="sr-only">Next</span> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Comment -->
                <div class="testimonials">
                    <div class="ts-testimonial-widget">
                        <div class="slider-items-products">
                            <div id="testimonials-slider" class="product-flexslider hidden-buttons home-testimonials">
                                <div class="slider-items slider-width-col4 fadeInUp">
                                    @foreach (Comment item in ViewBag.Comments)
                                    {
                                        <div class="holder">
                                            <div class="thumb"> <img src="http://localhost:51778/files/customer/@item.ObjCustomers?.FirstOrDefault()?.UrlImage" alt="@item.ObjCustomers?.FirstOrDefault()?.FullName"> </div>
                                            <p>@item.Description</p>
                                            <div class="line"></div>
                                            <strong class="name">@item.ObjCustomers?.FirstOrDefault()?.FullName</strong>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="featured-add-box">
                    <div class="featured-add-inner">
                        <a href="#"> <img src="images/ads-07.jpg" alt="f-img"></a>
                        <div class="banner-content">
                            <div class="banner-text">Women's</div>
                            <div class="banner-text1">49% off</div>
                            <p>on selected products</p>
                            <a href="#" class="view-bnt">Shop now</a>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>

<!-- Latest Blog -->
<div class="container">
    <div class="row">
        <div class="blog-outer-container">
            <div class="block-title">
                <h2>Latest Blog</h2>
            </div>
            <div class="blog-inner">
                @foreach (News item in ViewBag.News)
                {
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="entry-thumb image-hover2"> <a href="/news/details/@item.Id">
                            <img alt="Blog" src="http://localhost:51778/files/news/@item.UrlImage"> </a> 
                        </div>
                        <div class="blog-preview_info">
                            <h4 class="blog-preview_title"><a href="/news/details/@item.Id">@item.Title</a></h4>
                            <ul class="post-meta">
                                <li><i class="fa fa-user"></i>posted by <a href="#">@item.CreatedBy</a></li>
                                <li><i class="fa fa-clock-o"></i>
                                    <span class="day">@item.CreatedOn.ToString("dd")</span> 
                                    <span class="month">@item.CreatedOn.ToString("MMMM")</span>
                                </li>
                            </ul>
                            <div class="blog-preview_desc">@item.Summary</div>
                            <a class="blog-preview_btn" href="/news/details/@item.Id">READ MORE</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- End Latest Blog -->
